#include <stdio.h>
void main()
{
    int n,e=0,o=0,k;
    printf("Enter the size of the array:");
    scanf("%d",&n);
    int arr[n],even[n],odd[n];
    int i,even_count=0,odd_count=0;
   
    for(i=0,k=1;i<n,k<=n;i++,k++)
    {
        printf("\n Enter the %dth element:",k);
        scanf("%d",&arr[i]);
        if (arr[i]%2==0)
        {
            even[even_count++]=arr[i];
            e++;
        }
        else
        {
            odd[odd_count++]=arr[i];
            o++;
        }
    }
    printf("\n Even number: ");
    for(i=0;i<e;i++)
    {
        printf("%d ",even[i]);
    }
    printf("\n Odd number:");
    for(i=0;i<o;i++)
    {
        printf("%d ",odd[i]);
    }
    printf("\n");
}
---------------------------------------------------------------------
Output
Enter the size of the array:6
 Enter the 1th element:8
 Enter the 2th element:9
 Enter the 3th element:4
 Enter the 4th element:5
 Enter the 5th element:2
 Enter the 6th element:1
 Even number: 8 4 2 
 Odd number:9 5 1
---------------------------------------------------------------------------
