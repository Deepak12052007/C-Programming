#include<stdio.h>
int main ()
{
    char ch;
    printf("Enter the character:");
    scanf("%c",&ch);
    switch(ch)
    {
        case'a':
        case'e':
        case'i':
        case'o':
        case'u':
        case'A':
        case'E':
        case'I':
        case'O':
        case'U':
        printf("The given character is a vowel");
        break;
        default:
        if((ch>='a'&&ch<='z')||(ch>='A'&&ch<='Z'))
        {
            printf("The given character is an consonants");
        }
        else
        {
            printf("Invalid input");
        }
        break;
    }
    return 0;
}
------------------------------------------------
Output
Enter the character:e
The given character is a vowel
