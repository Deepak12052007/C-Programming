#include<stdio.h>
int main()
{
    int a;
    printf("Enter your score:");
    scanf("%d",&a);
    if(a>=40)
    {
        printf("\nCongragulations your passed");
    }
    else{
       printf("\nSorry you have failed");
    }
    return 0;   
}

